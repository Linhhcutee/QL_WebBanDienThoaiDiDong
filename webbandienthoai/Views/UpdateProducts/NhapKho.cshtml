<div class="col-md-6">
    <h3>Danh sách phiếu nhập kho</h3>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã Phiếu Nhập Kho</th>
                    <th>Nhân Viên</th>
                    <th>Trạng Thái</th>
                    <th>Thời Gian</th>
                    <th>Tổng Tiền</th>
                    <th>Mô Tả</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.DanhSachPhieuNhapKho != null)
                {
                    int stt = 1;
                    foreach (var item in ViewBag.DanhSachPhieuNhapKho)
                    {
                        <tr>
                            <td>@stt</td>
                            <td>@item.Maphieunhapkho</td>
                            <td>@item.TenNv</td>
                            <td>@item.Trangthaitt</td>
                            <td>@item.Thoigian?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@(item.Tongtien)</td>
                            <td>@item.Mota</td>
                        </tr>
                        stt++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">Không có phiếu nhập kho nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


